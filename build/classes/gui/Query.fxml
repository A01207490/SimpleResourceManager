<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.QueryController">
   <children>
      <BorderPane prefHeight="508.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox prefHeight="200.0" prefWidth="222.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label text="Resource:" />
                        <ComboBox fx:id="resourceComboBox" onAction="#onActionComboBoxes" prefWidth="150.0" />
                        <Label text="Origin" />
                        <ComboBox fx:id="landmarkComboBox" onAction="#onActionComboBoxes" prefWidth="150.0" />
                        <Button fx:id="submit" mnemonicParsing="false" onAction="#sumbit" text="Submit" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Closest destination" />
                        <TextField fx:id="closestLandmark" maxWidth="-Infinity" prefHeight="25.0" prefWidth="180.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <HBox spacing="10.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Shortest path" />
                              <ListView fx:id="pathListView" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Posible destinations" />
                              <ListView fx:id="landmarksListView" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Resources at destination" />
                              <ListView fx:id="resourcesListView" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <Button mnemonicParsing="false" onAction="#switchToMenu" text="Return" BorderPane.alignment="TOP_LEFT">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </Button>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
